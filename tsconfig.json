{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"newLine": "LF",
		"strict": true,

		"allowJs": false,
    "noImplicitAny": false,
    "noImplicitThis": false,

		"esModuleInterop": true,
		"paths": {
			"@types": ["types/index.d.ts"],
		}
	},
	"include": ["src", "types"],
	"exclude": ["node_modules", "test"]
}
